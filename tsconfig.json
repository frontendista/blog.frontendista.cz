{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"paths": {
			"@/styles/*": [
				"./src/styles/*"
			],
			"@/components/*": [
				"./src/components/*"
			],
			"@/paraglide/*": [
				"./src/paraglide/*"
			],
			"@/utils/*": [
				"./src/utils/*"
			],
			"@/article/*": [
				"./data/articles/common/*"
			],
			"@/modules/*": [
				"./src/modules/*"
			],
		},
	},
	"include": [
		".astro/types.d.ts",
		"**/*"
	],
	"exclude": [
		"dist"
	]
}
