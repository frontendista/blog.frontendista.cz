---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";

export interface Props {
	alt: string;
	caption: string;
	src: ImageMetadata;
}

const { alt, src, caption } = Astro.props;
---

<figure>
	<Picture formats={["avif", "webp"]} {src} {alt} />
	<figcaption class="mt-2 text-center">
		{caption}
	</figcaption>
</figure>
