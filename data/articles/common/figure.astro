---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";

export interface Props {
	alt: string;
	caption: string;
	src: ImageMetadata;
}

const { alt, src, caption } = Astro.props;
---

<figure class="py-xl">
	<Picture formats={["avif", "webp"]} {src} {alt} class="bg-fuchsia-950/25" />
	<figcaption class="mt-2 font-monospace text-base text-center">
		{caption}
	</figcaption>
</figure>
