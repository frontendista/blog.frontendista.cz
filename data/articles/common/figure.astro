---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";

export interface Props {
	alt: string;
	src: ImageMetadata;
}

const { alt, src } = Astro.props;
---

<figure>
	<Picture formats={["avif", "webp"]} {src} {alt} />
	<figcaption>
		<slot />
	</figcaption>
</figure>
