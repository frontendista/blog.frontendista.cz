---
import "@/styles/tailwind.css";

import { overwriteGetLocale } from "@/paraglide/runtime";
import { Seo as SEO } from "astro-seo-meta";
import { defaultLocale, type SupportedLocales } from "config";

export interface Props {
	/**
	 * @default {config.defaultLocale}
	 */
	lang?: SupportedLocales;
}

const { lang = defaultLocale } = Astro.props;

overwriteGetLocale(() => lang);
---

<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<SEO themeColor="#000" />
		<slot name="head" />
		<link rel="preload" href="/assets/fonts/atkinson-hypereligible/normal.woff2" as="font" crossorigin="" type="font/woff2" />
		<link rel="preload" href="/assets/fonts/atkinson-hypereligible/mono/normal.woff2" as="font" crossorigin="" type="font/woff2" />
		<link href="data:image/x-icon;base64," rel="icon" type="image/x-icon" />
	</head>
	<body>
		<slot />
	</body>
</html>
