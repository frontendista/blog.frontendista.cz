---
import NakedLink from "@/components/naked-link.astro";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

export interface Props {
	author: CollectionEntry<"authors">;
}

const { avatar, link, name, title } = Astro.props.author.data;
---

<NakedLink href={link}>
	<article class="flex">
		<figure class="flex items-center gap-sm">
			<Image src={avatar} alt="" width={avatar.width} height={avatar.height} class="bg-current rounded-full size-[2.5rem]" alt={`${name}'s headshot photo'`} />
			<figcaption class="flex flex-col justify-center gap-[0.375rem] text-sm leading-none whitespace-nowrap">
				<span class="font-medium">{name}</span>
				<span class="text-brand-300">{title}</span>
			</figcaption>
		</figure>
	</article>
</NakedLink>
